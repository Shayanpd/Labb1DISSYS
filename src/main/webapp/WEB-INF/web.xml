<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Define a servlet for the shopping cart -->
    <servlet>
        <servlet-name>ShoppingCartServlet</servlet-name>
        <servlet-class>Example.ShoppingCartServlet</servlet-class>
    </servlet>

    <!-- Map /cart to ShoppingCartServlet -->
    <servlet-mapping>
        <servlet-name>ShoppingCartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <!-- Define a second servlet for user accounts -->
    <servlet>
        <servlet-name>UserAccountServlet</servlet-name>
        <servlet-class>Example.UserAccountServlet</servlet-class>
    </servlet>

    <!-- Map /account to UserAccountServlet -->
    <servlet-mapping>
        <servlet-name>UserAccountServlet</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>

    <!-- Configure a welcome page -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
